<?xml version="1.0" encoding="utf-8"?> 
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
<!-- 当点击按钮的时候 -->
     <item android:state_pressed="true" > 
        <shape> 
            <!--  gradient:设置颜色 -->
            <gradient android:startColor="#40FF4040" android:endColor="#40FF4040" 
                android:angle="180" /> 
               <!--  corners：设置边框的弧度 -->
                <stroke android:width="1px" android:color="#000000" />  
            <corners android:radius="15px" /> 
            <padding android:left="5dp" android:top="5dp" 
                android:right="5dp" android:bottom="5dp" /> 
        </shape> 
    </item> 
    <item android:state_focused="true"> 
        <shape> 
            <!--  gradient:设置颜色 -->
            <gradient android:startColor="#40FF4040" android:endColor="#40FF4040" 
                android:angle="180" /> 
               <!--  corners：设置边框的弧度 -->
                <stroke android:width="1px" android:color="#000000" />  
            <corners android:radius="15px" /> 
            <padding android:left="5dp" android:top="5dp" 
                android:right="5dp" android:bottom="5dp" /> 
        </shape> 
    </item> 
    <item > 
        <shape> 
           <!--  gradient:设置颜色 -->
            <gradient android:startColor="#40ffffff" android:endColor="#40ffffff" 
                android:angle="180" /> 
               <!--  corners：设置边框的弧度 -->
                <stroke android:width="1px" android:color="#000000" />  
            <corners android:radius="15px" /> 
            <padding android:left="5dp" android:top="5dp" 
                android:right="5dp" android:bottom="5dp" /> 
        </shape> 
    </item> 
    
</selector>  
